            android:layout_margin="2dp"
            android:padding="0dp"
            android:contentDescription="@string/button9_description"
            android:textColor="#F3F8FF"
            />



    </GridLayout>

    <!-- New Game Button -->

    <!-- Score Card Button -->

    <!-- TextViews for displaying scores -->

    <Button
        android:id="@+id/buttonNewGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/gridLayout"
        android:layout_alignParentStart="true"
        android:layout_marginStart="67dp"
        android:layout_marginTop="58dp"
        android:fontFamily="monospace"
        android:text="@string/next_level" />

    <TextView
        android:id="@+id/playerXScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewPlayerTurn"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="234dp"
        android:layout_marginTop="110dp"
        android:layout_marginEnd="-4dp"
        android:fontFamily="@font/bowlby_one"
        android:text="@string/player_x_score"
        android:textColor="#5D3587"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/playerOScore"
        android:layout_width="194dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewPlayerTurn"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="28dp"
        android:layout_marginTop="111dp"
        android:layout_marginEnd="188dp"
        android:fontFamily="@font/bowlby_one"
        android:text="@string/player_o_score"
        android:textColor="#5D3587"
        android:textColorHighlight="#FF5722"
        android:textSize="16sp" />

    <Button
        android:id="@+id/buttonReset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonNewGame"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-48dp"
        android:layout_marginEnd="82dp"
        android:fontFamily="monospace"
        android:text="@string/reset" />


</RelativeLayout>